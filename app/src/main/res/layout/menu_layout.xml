<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:fab="http://schemas.android.com/apk/res-auto"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@drawable/gradient"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".MainActivity"
              android:weightSum="1">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_for_buttons"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/make_descision"
        android:id="@+id/Button_decide"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.40"
        android:clickable="true"
        android:onClick="onClick"
        android:gravity="center|center_horizontal"
        android:textColor="#3b3535"
        android:textSize="30dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_for_buttons"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/my_solutions"
        android:id="@+id/Button_myDecide"
        android:layout_weight="0.40"
        android:gravity="center_vertical|center"
        android:textSize="30dp"
        android:textColor="#3b3535"
        android:clickable="true"
        android:onClick="onClick1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_for_buttons"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/about"
        android:id="@+id/Button_about"
        android:gravity="center_vertical|center"
        android:textSize="25dp"
        android:clickable="true"
        android:onClick="onClick2"
        android:layout_weight="0.27"/>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|right"
        android:layout_margin="24dp"
        android:src="@drawable/ic_add_white_24dp"
        android:onClick="onClick"
        fab:fab_colorNormal="#009688"
        fab:fab_colorPressed="#4DB6AC"
        fab:fab_colorRipple="#4DB6AC"
        />


</LinearLayout>